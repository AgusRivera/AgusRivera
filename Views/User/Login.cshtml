@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";

}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true">

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-3 mb-5 bg-body rounded" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Login</h3>
            <form id="loginForm">
                <div class="form-group mb-3">
                    <label for="username" class="form-label">Usuario</label>
                    <input type="email" class="form-control" id="email" name="Email" placeholder="Ingrese su email" required>
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" name="Password" placeholder="Ingrese su contraseña" required>
                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                            <i class="fa fa-eye" id="toggleIcon"></i>
                        </button>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <a href="#" class="text-decoration-none">¿Olvidó su contraseña?</a>
                </div>
                <br />
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                </div>
                <br />
                <div class="text-center">
                    <p class="mb-4">Si no posee usuario y contraseña</p>
                    <a href="@Url.Action("Register", "User")" class="btn btn-success btn-block">Registrarse</a>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/login.js"></script>
